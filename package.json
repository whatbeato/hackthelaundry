{
  "name": "washing-machine-slack-bot",
  "version": "1.0.0",
  "description": "Slack bot that monitors washing machine status and sends notifications when loads are done",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec \"npm run build && node dist/index.js\"",
    "dev:watch": "concurrently \"tsc --watch\" \"nodemon dist/index.js\""
  },
  "dependencies": {
    "@slack/bolt": "^3.17.1",
    "axios": "^1.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "slack",
    "bot",
    "washing-machine",
    "notifications"
  ],
  "author": "",
  "license": "MIT"
}
